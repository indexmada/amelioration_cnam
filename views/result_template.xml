<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<template id="result_template" name="Resultats d'exament">
                <h3>Session 1</h3>
                <div class="resultats-examens--liste-ue">
                  <t t-set="ue_ids" t-value="env['note.list.filter'].sudo().get_ue_ids(year = year.id, session = 1)"/>
                  <t t-foreach="ue_ids" t-as="ue">
                    <a class="showResultsExams" t-att-data-ue="ue.code" t-att-data-annee="year.name">- <t t-esc="ue.code"/> -</a>
                  </t>
                  <br/>
                  <br/>
                  <br/>
                  <br/>
                  </div>
                  <h3>Session 2</h3>
                  <div class="resultats-examens--liste-ue">
                    <t t-set="ue_ids" t-value="env['note.list.filter'].sudo().get_ue_ids(year = year.id, session = 2)"/>
                    <t t-foreach="ue_ids" t-as="ue">
                      <a class="showResultsExams" t-att-data-ue="ue.code" t-att-data-annee="year.name">- <t t-esc="ue.code"/> -</a>
                    </t>
                  </div>
		</template>
		<template id="result_content_template" name="result content template">
			<div>
				<h3 t-esc="ue_name"/>
				<div>
					<table class="table--resultats-examens">
						<tbody>
							<tr>
								<th>
									Num√©ro Auditeur
								</th>
								<th>
									Date de naissance
								</th>
								<th>
									Note /20
								</th>
								<th>
									Mention
								</th>
							</tr>
							<t t-foreach="note_list_ids" t-as="note">
								<tr>
									<td t-esc="note.audit"/>
									<td t-esc="note.date_of_birth"/>
									<td t-esc="note.note_sem1 or note.note_sem2"/>
									<td t-esc="note.mention"/>
								</tr>
							</t>
						</tbody>
					</table>
				</div>
			</div>
		</template>
	</data>
</odoo>